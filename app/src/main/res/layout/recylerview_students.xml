<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/buttonlayout">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageStudent"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/imageStudent"
        android:layout_toStartOf="@id/imageEdit"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/imageStudent"
        android:layout_toLeftOf="@id/imageEdit">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/till"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtName"
                android:text="Default Name"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/till2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmail"
                android:text="Default Email"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/till3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPhone"
                android:text="Default PhoneNumber"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/imageEdit"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:src="@drawable/ic_edit_black_24dp"
    android:layout_toStartOf="@id/imageDelete"
    android:clickable="true"
    android:focusable="true"
    android:layout_toLeftOf="@id/imageDelete" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageDelete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentRight="true" />



</RelativeLayout>